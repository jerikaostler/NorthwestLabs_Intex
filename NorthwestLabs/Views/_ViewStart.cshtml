
@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";

    if (controller == "CustomerPortal")
    {
        cLayout = "~/Views/Shared/CustomerLayout.cshtml";
    }
    else if (controller == "Home")
    {
        cLayout = "~/Views/Shared/HomeLayout.cshtml";
    }
    else
    {
        cLayout = "~/Views/Shared/EmployeeLayout.cshtml";
    }

    Layout = cLayout;
}